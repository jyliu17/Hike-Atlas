<h1>Welcome Page</h1>
<p>Welcome to Hike Atlas!</p>
<p>Please Log In Or Sign Up.</p>

<% if @current_user %>

  <p>Hello, <%= @current_user.first_name + " " + @current_user.last_name%>!</p>

<% else %>

  <h1>User Login</h1>

  <% if flash[:error] %>
    <p><%= flash[:error] %></p>
  <% end %>

  <%= form_for :session do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email  %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Log In" %>
  <% end %>

<% end %>
