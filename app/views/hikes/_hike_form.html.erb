<% if flash[:errors]%>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @hike do |f| %>
    <%= f.label :start_date, "Start Date" %><br>
    <%= f.date_field :start_date %><br>

		<%= f.label :end_date, "End Date" %><br>
    <%= f.date_field :end_date %><br>

		<%= f.label :note %><br>
		<%= f.text_area :note %><br>

    <%= f.hidden_field(:trail_id, :value => Trail.first.id) %><br>
    <%= f.submit %>
<% end %>