<% if flash[:errors]%>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @hike do |f| %>
    <%= f.label :start_date, "Start Date" %><br>
    <%= f.date_field :start_date %><br>

		<%= f.label :end_date, "End Date" %><br>
    <%= f.date_field :end_date %><br>

		<%= f.label :note %><br>
		<%= f.text_area :note %><br>

		<%= f.fields_for :hike_items do |hike_item| %>
      <%= hike_item.hidden_field :hike_id, :value => @hike.id %>
			
      <%= hike_item.label :item_id %>
      <%= hike_item.collection_check_boxes(:post, :item_ids, Item.all, :id, :name) %>
    <% end %>

    <%= f.hidden_field(:trail_id, :value => @trail_id) %><br>
    <%= f.submit %>
<% end %>