<div class="error-messages">   
    <% if flash[:errors]%>
        <% flash[:errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
    <% end %>
</div>

<div class="field">

    <%= form_for @hike do |f| %>
        <%= f.label :start_date, "Start Date" %><br>
        <div><%= f.date_field :start_date, :class => 'input' %><div><br>

        <%= f.label :end_date, "End Date" %><br>
        <div><%= f.date_field :end_date, :class => 'input' %><div><br>

        <%= f.label :note %><br>
        <%= f.text_area :note, :class => 'input', :placeholder => "Note" %><br>

        <%= f.hidden_field(:trail_id, :value => @trail_id) %><br>
        
        <div><%= f.submit "Hike It!", :class => 'button is-light is-outlined'%></div><br>
    <% end %>

</div>